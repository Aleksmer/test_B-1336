mixin card-support(img, title, description)
  .card-support
    .card-support__img
      img(src=img)
    .card-support__gradient
    .card-support__info
      .card-support__label
        img(src='./images/svg/support/support-label.svg')
      h1.card-support__title=title
      h4.card-support__description=description
